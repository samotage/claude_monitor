{
  "_comment": "IMPORTANT: Replace /YOUR/HOME/PATH with your actual home directory (e.g., /Users/yourname). Do NOT use $HOME or ~ - JSON does not expand shell variables.",
  "_example": "For user 'john' on macOS: /Users/john/.claude/hooks/notify-monitor.sh",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/YOUR/HOME/PATH/.claude/hooks/notify-monitor.sh session-start"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/YOUR/HOME/PATH/.claude/hooks/notify-monitor.sh session-end"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/YOUR/HOME/PATH/.claude/hooks/notify-monitor.sh stop"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/YOUR/HOME/PATH/.claude/hooks/notify-monitor.sh notification"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/YOUR/HOME/PATH/.claude/hooks/notify-monitor.sh user-prompt-submit"
          }
        ]
      }
    ]
  }
}
