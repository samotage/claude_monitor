# Claude Headspace Configuration
#
# Copy this file to config.yaml and customize for your setup.
# The monitor will scan configured project directories for Claude Code sessions.

# =============================================================================
# Projects
# =============================================================================
# Add your projects below. Each project needs:
#   - name: A display name for the dashboard
#   - path: Absolute path to the project directory
#
# Sessions are discovered automatically from WezTerm (claude-* sessions).
# Use `claude-monitor start` in your project directory to launch sessions.

projects:
  # Example projects - replace with your own
  - name: "my-project"
    path: "/Users/yourname/dev/my-project"

  - name: "another-project"
    path: "/Users/yourname/dev/another-project"

  # Optional fields:
  # - name: "project-with-git"
  #   path: "/Users/yourname/dev/project"
  #   goal: "Build the best app"  # Overrides CLAUDE.md
  #   git_repo_path: "/Users/yourname/dev/project-repo"  # If different from path

# =============================================================================
# Dashboard Settings
# =============================================================================

# How often to poll for state changes (in seconds)
# Lower values = more responsive but more CPU usage
# Default: 2
scan_interval: 2

# Port for the Flask server
# Default: 5050
port: 5050

# Enable Flask debug mode
# Default: false
debug: false

# =============================================================================
# Terminal Backend
# =============================================================================
# Choose which terminal to use for Claude Code sessions.
# Options: "wezterm" (recommended), "tmux" (deprecated)
#
# wezterm: Cross-platform, full scrollback access, native focus, Lua hooks
# tmux: Legacy support, polling-only (no event hooks)

terminal_backend: "wezterm"

# WezTerm-specific settings (only used when terminal_backend: "wezterm")
wezterm:
  # Workspace name for grouping Claude sessions
  # Default: "claude-monitor"
  workspace: "claude-monitor"

  # Enable full scrollback capture
  # Default: true
  full_scrollback: true

# =============================================================================
# Notifications
# =============================================================================
# macOS notifications via terminal-notifier

notifications:
  # Enable/disable all notifications
  # Default: true
  enabled: true

  # Notify when agent needs input (AWAITING_INPUT state)
  # Default: true
  on_awaiting_input: true

  # Notify when task completes
  # Default: true
  on_complete: true

# =============================================================================
# Inference Configuration (AI-powered features)
# =============================================================================
# Configure which models to use for different AI tasks.
# Get your API key from https://openrouter.ai/keys
# Set OPENROUTER_API_KEY in .env file
#
# Fast tier: High frequency, low latency (Haiku recommended)
# Deep tier: Low frequency, high quality (Sonnet recommended)

inference:
  # Fast tier - used for real-time state detection
  # Using Claude 3.5 Haiku for speed and cost efficiency
  detect_state: "anthropic/claude-3-5-haiku"
  summarize_command: "anthropic/claude-3-5-haiku"
  classify_response: "anthropic/claude-3-5-haiku"
  quick_priority: "anthropic/claude-3-5-haiku"

  # Deep tier - used for batch operations
  # Using Claude 3.5 Sonnet for quality
  generate_progress_narrative: "anthropic/claude-3-5-sonnet"
  full_priority: "anthropic/claude-3-5-sonnet"
  roadmap_analysis: "anthropic/claude-3-5-sonnet"
  brain_reboot: "anthropic/claude-3-5-sonnet"
